{
  "version": 2,
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" },
      "rootDirectory": "client"
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "rootDirectory": "server"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ]
}
